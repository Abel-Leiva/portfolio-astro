---
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    />
    <link rel="icon" type="image/svg+xml" href="/logomio.svg" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Pixel Code for https://overtracking.com/ -->
    <script defer src="https://overtracking.com/p/8A3bMMT40OOY8kbt"></script>
    <!-- END Pixel Code -->
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  :root {
  }
  html {
    background-color: rgb(15, 23, 42);
    scroll-behavior: smooth;
  }
  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    display: flex;
    flex-direction: column;

    align-items: center;
    height: 100vh;
    margin: 0;
  }
  code {
  }
  .div {
    min-height: 350px;
    background-color: rgba(32, 43, 71, 0.473);
  }
  .divExperiencias {
    padding: 10px;
    background-color: rgba(32, 43, 71, 0.473);
  }
  .glass {
    background: rgba(15, 23, 42, 0.404);
    backdrop-filter: blur(10px);
  }
  .scroll-margin {
    scroll-margin-top: 50vh;
  }
  .scroll-proyectos::-webkit-scrollbar {
    width: 8px;
  }

  .scroll-proyectos::-webkit-scrollbar-track {
    background: transparent;
  }

  .scroll-proyectos::-webkit-scrollbar-thumb {
    background-color: #315204; /* slate-500 */
    border-radius: 8px;
    border: 2px solid transparent;
    background-clip: content-box;
  }

  .scroll-proyectos::-webkit-scrollbar-thumb:hover {
    background-color: #315204; /* slate-400 */
  }
</style>
